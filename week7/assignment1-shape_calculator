#include <iostream>
#include <cmath>

// This program wont use a user input for the numbers.
// The numbers for the area will be predetermined. 

#include <iostream>

class Rectangle {
private:
    double length;
    double width;

public:
    // Constructor
    Rectangle(double l, double w);

    // Const getter methods
    double getLength() const;
    double getWidth() const;

    // Overloaded area methods
    double area() const;
    void area(double& result) const;

    // Resize method using 'this' pointer
    Rectangle& resize(double newLength, double newWidth);

    // Display method (for demonstration)
    void display() const;
};

// Constructor definition
Rectangle::Rectangle(double l, double w) : length(l), width(w) {}

// Getter definitions
double Rectangle::getLength() const {
    return length;
}

double Rectangle::getWidth() const {
    return width;
}

// Area method returning value
double Rectangle::area() const {
    return length * width;
}

// Area method with reference parameter
void Rectangle::area(double& result) const {
    result = length * width;
}

// Resize method using 'this' pointer
Rectangle& Rectangle::resize(double newLength, double newWidth) {
    this->length = newLength;
    this->width = newWidth;
    return *this;
}

// Display method
void Rectangle::display() const {
    std::cout << "Length: " << length << ", Width: " << width << std::endl;
}
